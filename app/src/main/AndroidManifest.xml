<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kadabra.courier">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name="com.kadabra.courier.utilities.AppController"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.kadabra.courier.recyclerview.RecyclerViewActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.kadabra.courier.exception.CrashActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.kadabra.courier.task.TaskDetailsActivity"
            android:launchMode="singleTop" />
        <activity
            android:name="com.kadabra.courier.task.TaskActivity"
            android:launchMode="singleTop"
            ></activity>
        <activity
            android:name="com.kadabra.courier.task.LocationDetailsActivity"
            android:label="@string/title_activity_maps"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kadabra.courier.intro.SplashActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <!--                <action android:StopName="android.settings.SETTINGS" />-->
                <!--                <action android:StopName="android.intent.action.MAIN" />-->
                <!--                <category android:StopName="android.intent.category.HOME" />-->
                <!--                <category android:StopName="android.intent.category.DEFAULT" />-->
                <!--                <category android:StopName="android.intent.category.LAUNCHER" />-->
            </intent-filter>
        </activity>

        <activity
            android:name="com.kadabra.courier.login.LoginActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.kadabra.courier.main.MainActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
<!--        <meta-data-->
<!--            android:name="com.google.android.gms.version"-->
<!--            android:value="@integer/google_play_services_version" />-->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <service android:name="com.kadabra.courier.firebase.FirebasePushNotificatinService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service
            android:name="com.kadabra.services.LocationUpdatesService"
            android:enabled="true"
            android:exported="true"
            android:foregroundServiceType="location" />
    </application>
<!--    <uses-feature-->
<!--        android:glEsVersion="0x00020000"-->
<!--        android:required="true" />-->
</manifest>